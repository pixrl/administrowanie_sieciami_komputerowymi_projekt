# Loopback interfaces
auto lo
iface lo inet loopback
  address 127.0.0.1
  netmask 255.0.0.0

# External Interface - facing Internet
auto eth0
iface eth0 inet dhcp
        hostname hades

# Internal Interface - facing LAN
auto eth1
iface eth1 inet static
        address 192.168.1.1
        netmask 255.255.255.0
        broadcast 192.168.1.255

# Interface for host
auto eth3
iface eth3 inet dhcp
        hostname hades
